<?xml version="1.0"?>

<object name="portal_skins"
        meta_type="Plone Skins Tool"
        allow_any="False"
        cookie_persistence="False"
        request_varname="plone_skin">

 <object name="plonerda_templates"
         meta_type="Filesystem Directory View"
         directory="PloneRDA/skins/plonerda_templates"/>
 <object name="plonerda_styles"
         meta_type="Filesystem Directory View"
         directory="PloneRDA/skins/plonerda_styles"/>
 <object name="plonerda_images"
         meta_type="Filesystem Directory View"
         directory="PloneRDA/skins/plonerda_images"/>
 
 <skin-path name="Plone Default">
  <layer insert-after="custom" 
         name="plonerda_templates"/>
  <layer insert-after="custom" 
         name="plonerda_styles"/>
  <layer insert-after="custom" 
         name="plonerda_images"/>
 </skin-path>

</object>